{
  "name": "babel-skeleton",
  "description": "Babel skeleton for build es6 JavaScript in the browser",
  "version": "1.0.3",
  "keywords": [
    "babel",
    "es6",
    "javascript",
    "skeleton"
  ],
  "homepage": "https://github.com/seeren/webgl-device-skeleton",
  "author": "Cyril Ichti",
  "scripts": {
    "start": "npm run serve",
    "serve": "npm run sync | npm run sync-babel | npm run sync-sass",
    "sync": "./node_modules/.bin/browser-sync start --server --files ./dist/index.*",
    "sync-babel": "./node_modules/.bin/watchify ./src/index.js -t [babelify] -o ./dist/index.js",
    "sync-sass": "./node_modules/.bin/node-sass --watch ./src/index.scss ./dist/index.css",
    "test": "./node_modules/.bin/mocha --require babel-register --recursive test/unit",
    "test-coverage": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/mocha --recursive test/unit",
    "test-coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "style": "dist/index.css",
  "sass": "src/index.scss",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/seeren/babel-skeleton"
  },
  "license": "MIT",
  "devDependencies": {
    "babelify": "latest",
    "babel-plugin-istanbul": "latest",
    "babel-plugin-transform-html-import-to-string": "latest",
    "babel-preset-env": "latest",
    "babel-register": "latest",
    "browser-sync": "latest",
    "chai": "latest",
    "cross-env": "latest",
    "coveralls": "latest",
    "jsdom": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "latest",
    "node-sass": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "watchify": "latest"
  },
  "engines": {
    "node": ">=8"
  }
}