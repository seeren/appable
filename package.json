{
  "name": "babel-skeleton",
  "version": "1.0.0",
  "description": "Babel skeleton for native app",
  "keywords": [
    "babel",
    "es6",
    "skeleton",
    "javascript"
  ],
  "main": "index.html",
  "scripts": {
    "serve": "npm run sync | npm run babel | npm run sass",
    "sync": "./node_modules/.bin/browser-sync start --server --files \"./dist/index.*\"",
    "test": "./node_modules/.bin/mocha --require babel-register --recursive test/unit",
    "babel": "./node_modules/.bin/watchify ./src/index.js -t [babelify] -o ./dist/index.js",
    "sass": "./node_modules/.bin/node-sass --watch ./src/index.scss ./dist/index.css",
    "coverage": "./node_modules/.bin/cross-env NODE_ENV=test ./node_modules/.bin/nyc ./node_modules/.bin/mocha --recursive test/unit",
    "coveralls": "npm run coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "author": "Cyril Ichti",
  "license": "MIT",
  "devDependencies": {
    "babelify": "latest",
    "babel-plugin-istanbul": "latest",
    "babel-plugin-transform-html-import-to-string": "latest",
    "babel-preset-env": "latest",
    "babel-register": "latest",
    "browser-sync": "latest",
    "chai": "latest",
    "cross-env": "latest",
    "coveralls": "latest",
    "jsdom": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "latest",
    "node-sass": "latest",
    "nyc": "latest",
    "sinon": "latest",
    "watchify": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/seeren/babel-skeleton"
  }
}
