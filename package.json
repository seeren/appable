{
  "name": "babel-skeleton",
  "description": "Build modern JavaScript with productive environment",
  "version": "2.1.2",
  "keywords": [
    "es6",
    "webpack",
    "babel",
    "javascript",
    "hybrid-app"
  ],
  "homepage": "https://seeren.github.io/babel-skeleton/www/index.html",
  "author": "Cyril Ichti",
  "scripts": {
    "start": "npm run dev",
    "dev": "webpack --mode development --watch",
    "prod": "webpack --mode production --watch",
    "build": "webpack --mode production",
    "android": "cordova run android --device",
    "android:install": "cordova platform add android",
    "ios": "cordova run ios --device",
    "ios:install": "cordova platform add ios",
    "core": "babel ./src/service.js --out-file service.js | babel ./src/component.js --out-file component.js | babel ./src/router.js --out-file router.js",
    "skeleton": "skeleton",
    "test": "mocha --require @babel/register --recursive test/unit",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha --recursive test/unit",
    "test:coveralls": "npm run test:coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "sass": "src/index.scss",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/seeren/babel-skeleton"
  },
  "license": "MIT",
  "bin": {
    "skeleton": "cli/index.js"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-globalization": {},
      "cordova-plugin-inappbrowser": {},
      "cordova-plugin-network-information": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-whitelist": {}
    }
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/register": "latest",
    "babel-loader": "latest",
    "babel-plugin-istanbul": "latest",
    "babel-plugin-transform-html-import-to-string": "latest",
    "browser-sync": "latest",
    "browser-sync-webpack-plugin": "latest",
    "chai": "latest",
    "cordova": "latest",
    "coveralls": "latest",
    "cross-env": "latest",
    "css-loader": "latest",
    "jsdom": "latest",
    "mini-css-extract-plugin": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "latest",
    "node-sass": "latest",
    "nyc": "latest",
    "sass-loader": "latest",
    "sinon": "latest",
    "style-loader": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "npm": "latest"
  }
}