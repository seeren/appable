{
  "name": "{projectName}",
  "version": "0.0.1",
  "scripts": {
    "android": "cordova run android --device",
    "android:build": "npm run build & npm run android",
    "android:install": "cordova platform add android",
    "build": "webpack --mode production",
    "cordova": "cordova",
    "dev": "webpack --mode development --watch",
    "prod": "webpack --mode production --watch",
    "res": "cordova-res",
    "skeleton": "skeleton",
    "start": "npm run dev",
    "test": "mocha --require @babel/register --recursive test/unit",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha --recursive test/unit",
    "test:coveralls": "npm run test:coverage -- --report lcovonly && cat ./coverage/lcov.info | coveralls"
  },
  "sass": "src/index",
  "main": "src/index",
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-device": {},
      "cordova-plugin-statusbar": {},
      "cordova-plugin-whitelist": {},
      "cordova-plugin-headercolor": {},
      "cordova-plugin-splashscreen": {}
    }
  },
  "devDependencies": {
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/register": "latest",
    "babel-loader": "latest",
    "babel-plugin-istanbul": "latest",
    "babel-skeleton": "latest",
    "browser-sync": "latest",
    "browser-sync-webpack-plugin": "latest",
    "chai": "latest",
    "cordova": "latest",
    "cordova-res": "latest",
    "coveralls": "latest",
    "cross-env": "latest",
    "css-loader": "latest",
    "file-loader": "latest",
    "jsdom": "latest",
    "mini-css-extract-plugin": "latest",
    "mocha": "latest",
    "mocha-lcov-reporter": "latest",
    "node-sass": "latest",
    "nyc": "latest",
    "raw-loader": "latest",
    "sass-loader": "latest",
    "sinon": "latest",
    "style-loader": "latest",
    "webpack": "latest",
    "webpack-cli": "latest"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "cordova-android": "^8.1.0",
    "cordova-plugin-device": "^2.0.3",
    "cordova-plugin-headercolor": "^1.0.0",
    "cordova-plugin-splashscreen": "^5.0.3",
    "cordova-plugin-statusbar": "^2.4.3",
    "cordova-plugin-whitelist": "^1.3.4"
  }
}